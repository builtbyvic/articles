---
const { url, path, tooltipText } = Astro.props;
---

<div>
  <a href={url} target="_blank"><img src={path} /></a>
  <span>{tooltipText}</span>
</div>

<style>
  div {
    position: relative;
  }
  div:hover span {
    display: initial;
  }
  a {
    color: inherit;
    text-decoration: none;
  }
  img {
    block-size: 24px;
    inline-size: 24px;
  }
  span {
    background-color: #333;
    border-radius: var(--xs);
    /* color: var(--light-text-color); */
    display: none;
    font-size: 0.8rem;
    inset-block-end: 110%;
    inset-inline-start: 50%;
    padding: var(--xs) var(--small);
    position: absolute;
    transform: translate(-50%);
    user-select: none;
  }
  a,
  div {
    display: inline-grid;
    place-content: center;
  }
</style>
